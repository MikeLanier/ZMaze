<UserControl x:Class="ZMaze.ControlPanel.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="using:ZMaze.ControlPanel"
             mc:Ignorable="d">
    <StackPanel Orientation="Vertical" Background="White">
		<local:LoadMazes/>
		<local:SaveMazes/>
		<local:Mazes/>
		<local:MazeSize/>
		<local:StartCell/>
		<local:Entrance/>
		<local:Exit/>
		<local:CreateMaze/>
		<local:SolveMaze/>
		<local:PrintMaze/>
		<local:CellSize/>
		<local:Display/>
		<local:CreateRoom/>
	</StackPanel>
</UserControl>
