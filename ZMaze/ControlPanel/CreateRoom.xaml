<UserControl x:Class="ZMaze.ControlPanel.CreateRoom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="using:ZMaze.ControlPanel"
             mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Create a room" Width="170" Height="30"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Room Origin" Width="70" Height="30"/>
			<TextBlock Text="x" Width="30" Height="30"/>
			<TextBox Text="512" Width="60" Height="30"/>
			<TextBlock Text="y" Width="30" Height="30"/>
			<TextBox Text="512" Width="60" Height="30"/>
			<Button Content="?" Width="30" Height="30"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Room Size" Width="70" Height="30"/>
			<TextBlock Text="w" Width="30" Height="30"/>
			<TextBox Text="512" Width="60" Height="30"/>
			<TextBlock Text="h" Width="30" Height="30"/>
			<TextBox Text="512" Width="60" Height="30"/>
			<Button Content="?" Width="30" Height="30"/>
		</StackPanel>
	</StackPanel>
</UserControl>
