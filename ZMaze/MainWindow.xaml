<Window x:Class="ZMaze.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZMaze"
        xmlns:cp="clr-namespace:ZMaze.ControlPanel"
        xmlns:dp="clr-namespace:ZMaze.DisplayPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="900">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="300"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<cp:ControlPanel Grid.Column="0"></cp:ControlPanel>
		<dp:DisplayPanel Grid.Column="1"></dp:DisplayPanel>

	</Grid>
</Window>
